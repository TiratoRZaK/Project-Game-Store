@model Data_Access_Layer.Entities.Game

<a href="/Games/Index/@Model.GameId">
    <div class="itemstory">
        <div class="itemTop">
            <span class="itemCategory">
                Категория: @Model.Category.CategoryName
            </span>
        </div>
        @if (Model.ImageData == null)
        {
            <div class="itemImg" style="background-size: 160%; background-size: 100%;">
                <div class="example2">
                    <img src="~/Content/Images/no.png" class="example_beauty" />
                    <span>@Model.Discount%</span>
                </div>
            </div>
            }
            else
            {
            <div class="itemImg" style="background-size: 160%; background-size: 100%;">
                <div class="example2">
                    <img src="@Url.Action("GetImage", "Games", new { Model.GameId })" alt="" class="example_beauty" />
                    <span>@Model.Discount%</span>
                </div>
            </div>
            }
            <div class="itemTitle">
                <h3><a href="/Games/Index/@Model.GameId">@Model.Name</a></h3>
            </div>
            <div class="itemDescr">
                @Model.Discription
            </div>
            <div class="itemButton">
                @if (Model.Discount != 0)
        {
            <span class="itemComm">@(Model.Price / 100 * (100 - Model.Discount)) руб.</span>
}
else
{
        <span class="itemComm">@Model.Price.ToString("# руб")</span>
}
                @if (Model.CountKeys > 0)
        {
            if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("В корзину", "AddToCart", "Cart", new { gameId = Model.GameId, returnUrl = Request.Url.PathAndQuery }, new { @class = "itemMore" });
    }
    else
    {
        <div class="itemMore">
            Авторизуйтесь
        </div>
}
}
else
{
        <small class="itemMore right"><strong>Нет в наличии</strong></small>
}
            </div>
        </div>
</a>

