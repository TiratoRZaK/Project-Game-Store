@model IEnumerable<PlaySpace.Entities.Category>

@{
    ViewBag.AdminTitle = "Список категорий";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список категорий</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered" style="width: 75%; margin-left: 200px;">
            <tr>
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.CategoryName, "Index", "Admin", new { item.Id }, null)</td>
                    <td class="text-center">
                        @Html.ActionLink("Удалить категорию", "Delete", "Category", new { item.Id }, null)
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить категорию", "Create", null,
                                      new { @class = "btn btn-default" })
        <a href="/" class="btn btn-default">Вернуться к каталогу игр</a>
    </div>
</div>