@model IEnumerable<PlaySpace.Entities.Game>

@{
    ViewBag.AdminTitle = "Игры категории "+ViewBag.CatName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default" style="font-family: 'Times New Roman';">
    <div class="panel-heading">
        <h3>Список игр категории: @ViewBag.CatName</h3>
    </div>
    <div class="panel-body" style="font-family: 'Times New Roman';">
        <table class="table table-striped table-condensed table-bordered" style="font-family: 'Times New Roman'; width: 75%; margin-left: 200px;">
            <tr>
                <th class="text-center">Название</th>
                <th class="text-right">Цена</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Edit", "Admin", new { item.GameId }, null)</td>
                    <td class="text-right">@item.Price.ToString("# руб")</td>
                    <td class="text-center">
                        @Html.ActionLink("Удалить", "Delete", new { gameId=item.GameId },
                            new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить игру", "Create", new { categoryId = ViewBag.CategoryNewGame },
                            new { @class = "btn btn-default" })
        <a href="/Category/Index" class="btn btn-default">Вернуться к списку категорий</a>
    </div>
</div>